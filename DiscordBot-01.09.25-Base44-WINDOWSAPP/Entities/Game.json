{
  "name": "Game",
  "type": "object",
  "properties": {
    "titolo": {
      "type": "string",
      "description": "Il nome del gioco"
    },
    "descrizione": {
      "type": "string",
      "description": "Una descrizione breve del gioco"
    },
    "genere": {
      "type": "string",
      "description": "Il genere del gioco"
    },
    "piattaforma": {
      "type": "string",
      "enum": [
        "PS Plus",
        "Xbox Game Pass",
        "Prime Gaming",
        "Multiple"
      ],
      "description": "La piattaforma su cui il gioco è disponibile"
    },
    "link": {
      "type": "string",
      "description": "Il link diretto al gioco"
    },
    "immagine": {
      "type": "string",
      "description": "Il link all'immagine del gioco"
    },
    "data_rilascio": {
      "type": "string",
      "format": "date",
      "description": "Data di rilascio del gioco"
    },
    "prezzo": {
      "type": "string",
      "description": "Prezzo del gioco o 'Gratuito'"
    },
    "rating": {
      "type": "number",
      "minimum": 0,
      "maximum": 5,
      "description": "Valutazione del gioco da 0 a 5"
    },
    "is_processed": {
      "type": "boolean",
      "default": false,
      "description": "Indica se il gioco è stato già processato nella cache"
    },
    "platforms_available": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Lista delle piattaforme su cui è disponibile (PS, Xbox, PC, etc.)"
    }
  },
  "required": [
    "titolo",
    "piattaforma"
  ]
}