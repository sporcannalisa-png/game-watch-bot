import React from "react";
import { Card, CardContent, CardFooter, CardHeader } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Send, ExternalLink, Loader2 } from "lucide-react";
import { Button } from "@/components/ui/button";
import {
  DropdownMenu,
  DropdownMenuContent,
  DropdownMenuItem,
  DropdownMenuTrigger,
} from "@/components/ui/dropdown-menu";
import { MoreHorizontal } from "lucide-react";

const platformColors = {
  "PS Plus": "bg-blue-500/10 text-blue-400 border-blue-500/20",
  "Xbox Game Pass": "bg-green-500/10 text-green-400 border-green-500/20",
  "Prime Gaming": "bg-purple-500/10 text-purple-400 border-purple-500/20",
  "Multiple": "bg-yellow-500/10 text-yellow-400 border-yellow-500/20"
};

export default function GameCard({ game, onSendToDiscord, isSending }) {
  return (
    <Card className="bg-card border-border overflow-hidden flex flex-col group">
      <CardHeader className="p-0 relative">
        <div className="aspect-[3/4] w-full overflow-hidden">
          <img 
            src={game.immagine} 
            alt={game.titolo} 
            className="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
          />
        </div>
        <div className="absolute top-2 right-2">
            <DropdownMenu>
              <DropdownMenuTrigger asChild>
                <Button variant="secondary" size="icon" className="h-8 w-8 bg-background/50 backdrop-blur-sm">
                  <MoreHorizontal className="h-4 w-4" />
                </Button>
              </DropdownMenuTrigger>
              <DropdownMenuContent align="end">
                <DropdownMenuItem onClick={onSendToDiscord} disabled={isSending}>
                  {isSending ? (
                      <Loader2 className="mr-2 h-4 w-4 animate-spin" />
                  ) : (
                      <Send className="mr-2 h-4 w-4" />
                  )}
                  <span>Invia a Discord</span>
                </DropdownMenuItem>
                {game.link && (
                    <DropdownMenuItem asChild>
                        <a href={game.link} target="_blank" rel="noopener noreferrer">
                            <ExternalLink className="mr-2 h-4 w-4" />
                            <span>Vai al gioco</span>
                        </a>
                    </DropdownMenuItem>
                )}
              </DropdownMenuContent>
            </DropdownMenu>
        </div>
      </CardHeader>
      
      <CardContent className="p-3 flex-grow">
        <h3 className="font-semibold text-foreground truncate">{game.titolo}</h3>
        <p className="text-sm text-muted-foreground">{game.prezzo || "Gratuito"}</p>
      </CardContent>

      <CardFooter className="p-3 pt-0">
        <Badge variant="outline" className={`text-xs ${platformColors[game.piattaforma]}`}>
          {game.piattaforma}
        </Badge>
      </CardFooter>
    </Card>
  );
}