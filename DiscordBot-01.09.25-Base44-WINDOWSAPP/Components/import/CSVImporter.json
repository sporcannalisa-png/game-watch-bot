import React, { useState } from "react";
import { Button } from "@/components/ui/button";
import { Upload, Download, Loader2, FileText, Check } from "lucide-react";

export default function CSVImporter({ onImport, isProcessing }) {
  const [selectedFile, setSelectedFile] = useState(null);
  
  const handleFileSelect = (e) => {
    const file = e.target.files[0];
    if (file && file.type === "text/csv") {
      setSelectedFile(file);
    }
  };

  const parseCSV = (csvContent) => {
    const lines = csvContent.split('\n');
    if (lines.length < 2) return [];
    const headers = lines[0].split(',').map(h => h.trim().toLowerCase().replace(/"/g, ''));
    const games = [];

    for (let i = 1; i < lines.length; i++) {
      if (!lines[i].trim()) continue;
      const values = lines[i].split(',').map(v => v.trim().replace(/"/g, ''));
      const game = {};
      headers.forEach((header, index) => {
        if(values[index]) game[header] = values[index];
      });
      if (game.titolo) games.push(game);
    }
    return games;
  };

  const handleImport = async () => {
    if (!selectedFile) return;
    const content = await selectedFile.text();
    const games = parseCSV(content);
    if (games.length > 0) {
      await onImport(games);
    }
    setSelectedFile(null);
  };

  const downloadTemplate = () => {
    const csvContent = "titolo,descrizione,genere,piattaforma,link,immagine,data_rilascio,prezzo,rating\n" +
      '"The Last of Us Part II","Descrizione...","Azione","PS Plus","https://...","https://...","2020-06-19","Gratuito","4.8"';
    const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
    const url = URL.createObjectURL(blob);
    const link = document.createElement('a');
    link.setAttribute('href', url);
    link.setAttribute('download', 'template_giochi.csv');
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  };

  return (
    <div className="space-y-4">
        <p className="text-sm text-muted-foreground">Carica un file CSV per aggiungere pi√π giochi contemporaneamente. Assicurati che le colonne corrispondano al template.</p>
        <div className="p-4 rounded-lg border-2 border-dashed bg-background flex flex-col items-center justify-center text-center">
             <input type="file" accept=".csv" onChange={handleFileSelect} className="hidden" id="csv-upload" />
            {selectedFile ? (
                <div className="flex flex-col items-center gap-2">
                    <FileText className="w-8 h-8 text-primary"/>
                    <p className="font-medium">{selectedFile.name}</p>
                </div>
            ) : (
                <label htmlFor="csv-upload" className="cursor-pointer space-y-2">
                    <Upload className="w-8 h-8 mx-auto text-muted-foreground"/>
                    <p className="text-sm text-muted-foreground">Trascina un file o clicca per caricare</p>
                </label>
            )}
        </div>
      <div className="flex gap-2">
        <Button onClick={handleImport} disabled={isProcessing || !selectedFile} className="w-full">
 