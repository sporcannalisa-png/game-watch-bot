{
  "appId": "com.gamingbot.dashboard",
  "productName": "Gaming Bot Dashboard",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "public/electron.js",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "public/assets",
      "to": "assets",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/assets/icon.ico",
    "requestedExecutionLevel": "asInvoker"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/assets/icon.icns",
    "category": "public.app-category.productivity"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "public/assets/icon.png",
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Gaming Bot Dashboard"
  },
  "publish": {
    "provider": "github",
    "owner": "your-github-username",
    "repo": "gaming-bot-dashboard"
  }
}